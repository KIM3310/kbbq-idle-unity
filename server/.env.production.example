KBBQ_ENV=prod
KBBQ_EXPOSE_DOCS=0

# Security secrets (replace before deploy)
KBBQ_HMAC_SECRET=replace-with-very-strong-random-secret
KBBQ_TOKEN_SALT=replace-with-very-strong-random-salt
KBBQ_OPS_ADMIN_TOKEN=replace-with-ops-admin-token

# Network hardening
KBBQ_CORS_ORIGINS=https://your-service.example.com
KBBQ_NONCE_TTL_SECONDS=600
KBBQ_MAX_CLOCK_SKEW_SECONDS=300
KBBQ_REQUEST_TIMEOUT_SECONDS=8

# IAP production verification
KBBQ_IAP_RECEIPT_MODE=store
KBBQ_IAP_PRODUCT_IDS_JSON={"starter":"com.yourgame.starter","premium":"com.yourgame.premium"}
KBBQ_APPLE_SHARED_SECRET=replace-with-appstore-shared-secret
KBBQ_GOOGLE_PACKAGE_NAME=com.yourgame.app
KBBQ_GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"...","token_uri":"https://oauth2.googleapis.com/token"}

# Runtime storage
KBBQ_DB_PATH=/data/kbbq.db
